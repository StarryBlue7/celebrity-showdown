<div class="d-flex justify-content-center row w-100">
    <div id="login" class="col-3">
        <h3 id="login-header" class="d-flex justify-content-center text-warning">Login</h3>

        <form class="form login-form text-white">
            <div class="d-flex justify-content-end flex-fill form-group">
                <label for="email-login">email :</label>
                <input class="form-input" type="text" id="email-login" />
            </div>
            <div class="d-flex justify-content-end flex-fill form-group">
                <label for="password-login">password :</label>
                <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="d-flex justify-content-end flex-fill form-group">
                <button class="btn btn-danger mr-5" type="submit">login</button>
            </div>
        </form>
    </div>
    <div id="signup" class="col-3">
        <h3 id="signup-header" class="d-flex justify-content-center text-warning">Signup</h3>

        <form class="form signup-form text-white">
            <div class="d-flex justify-content-end flex-fill form-group">
                <label for="name-signup">name :</label>
                <input class="form-input" type="text" id="name-signup" />
            </div>
            <div class="d-flex justify-content-end flex-fill form-group">
                <label for="email-signup">email :</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="d-flex justify-content-end flex-fill form-group">
                <label for="password-signup">password :</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="d-flex justify-content-end flex-fill form-group">
                <button class="btn btn-danger mr-5" type="submit">signup</button>
            </div>
        </form>
    </div>
</div>

<script src='js/login.js'></script>
<script src='js/signup.js'></script>