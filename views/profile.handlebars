<div class="row d-flex flex-row flex-fill justify-content-center mt-5">
  <!-- User Profile card -->
  <div>
    <div id="profile-card" class="card text-center bg-secondary align-items-center" style="width: 15rem;">
      <img src="./images/profile-icon-default.png" class="card-img-top profile-icon" alt="Image of a generic avatar">
      <div class="card-body">
        <h5 class="card-title text-center">{{username}}</h5>
        <h6 class="card-title text-center">Wins: {{win_count}}</h6>
        <button id="logout" class="text-center btn btn-secondary mb-2">Logout</button>
      </div>
    </div>
    <div class="flex-fill">
      <div class="mb-4 mt-4 text-center d-flex flex-column flex-wrap justify-content-center">
        <a href="/create" class="btn btn-danger profile-button">Add a Celebrity to your </a>
        <a href="/showdowns" class="btn btn-danger profile-button">Showdown!</a>
      </div>
    </div>
  </div>

  <!-- Celebrity Roster container -->
  <div id="celebrity-card" class="card col-6 ml-4 bg-secondary">
    <h2 class="card-header text-center my-auto leaderboard-attribute">Celebrity Roster</h2>
    <div class="card-body">
      <ul class="d-flex flex-row flex-wrap justify-content-center list-group list-group-flush">
        <!-- Celebrity cards -->
        {{#each celebrities}}
        <li class="profile-cards card d-flex flex-column align-items-center justify-content-end px-3 pt-2 bg-dark m-2">
          <h3 class="fighter-name text-center">{{name}}</h3>
          <img class="fighter mx-1 mb-2" src="https://celebritybucks.com/images/celebs/full/{{fame_id}}.jpg" alt="Image a celebrity in this user's roster"
            onerror="this.src='https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png'" />
          <h5 class="fighter-name text-center text-warning">Level: {{level}} </h5>
          <h5 class="fighter-name text-center text-danger">XP: {{XP}} </h5>
          <a href="" class="btn btn-danger mb-2 delete-celeb" data-celebid="{{id}}">Delete</a>
        </li>
        <!-- end celebrity card -->
        {{/each}}
      </ul>
    </div>
  </div>

</div>

<script src='js/logout.js'></script>
<script src='js/celeb-delete.js'></script>