<div class="row d-flex justify-content-center align-items-center w-100 mt-5 mx-0">
    <div class="col-lg-8 col-md-12 col-sm-12">
        <section class="card flex-fill border-warning">
            <summary class="card-header bg-dark">
                <h2 class="text-center my-auto pt-1 page-header">SHOWDOWN!</h2>
            </summary>
            <article class="card-body bg-secondary border-bottom border-top border-warning">
                <div class="d-flex flex-row flex-fill justify-content-around align-items-center">
                    <div class="d-flex flex-column align-items-center">
                        <h3 id="attacker-name" class="fighter-name text-center">{{defaultCeleb.name}}</h3>
                        <div class="progress">
                            <div id="attackerBar" class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0"
                                aria-valuemax="100" style="width:100%">
                            </div>
                        </div>
                        <img id="attacker" class="animate__animated fighter mx-1 mt-3"
                            src="https://celebritybucks.com/images/celebs/full/{{defaultCeleb.fame_id}}.jpg"
                            alt="Image of the attacking celebrity"
                            onerror="this.src='https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png'" />
                        <h4 id="attacker-level" class="text-center mt-3">Lv: {{defaultCeleb.level}}</h4>
                        <h3 id="attacker-power" class="text-center">Pwr: {{defaultCeleb.fame.power}}</h3>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <img id="swords" class="swords mt-5 mb-4"
                            src="https://img.icons8.com/external-justicon-lineal-justicon/64/fa314a/external-sword-pirates-justicon-lineal-justicon.png"
                            alt="Image of swords" style="display: none" />
                        <a href="" id="showdown-btn" class="btn btn-danger" 
                            data-atk-id="{{defaultCeleb.id}}" 
                            data-atk-name="{{defaultCeleb.name}}" 
                            data-atk-pwr="{{defaultCeleb.fame.power}}" 
                            data-atk-lv="{{defaultCeleb.level}}"
                            data-atk-xp="{{defaultCeleb.XP}}"
                            data-def-id="{{randomEnemy.fame.id}}" 
                            data-def-name="{{randomEnemy.name}}" 
                            data-def-pwr="{{randomEnemy.fame.power}}" 
                            data-def-lv="{{randomEnemy.level}}"
                        >Start</a>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <h3 id="defender-name" class="fighter-name text-center">{{randomEnemy.name}}</h3>
                        <div class="progress">
                            <div id="defenderBar"class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0"
                                aria-valuemax="100" style="width:100%">
                            </div>
                        </div>
                        <img id="defender" class="animate__animated fighter mx-1 mt-3"
                            src="https://celebritybucks.com/images/celebs/full/{{randomEnemy.fame_id}}.jpg"
                            alt="Image of the defending celebrity"
                            onerror="this.src='https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png'" />
                        <h4 id="defender-level" class="text-center mt-3">Lv: {{randomEnemy.level}}</h4>
                        <h3 id="defender-power" class="text-center">Pwr: {{randomEnemy.fame.power}}</h3>
                    </div>
                </div>
            </article>
        </section>

        <section class="card flex-fill border-warning mt-3">
            <summary class="card-header bg-dark">
                <h2 class="text-center my-auto pt-1 page-header">Select Your Fighter</h2>
            </summary>
            <article class="card-body bg-secondary border-bottom border-top border-warning">
                <div class="d-flex flex-row flex-fill flex-wrap justify-content-around align-items-center">
                    {{#each userCelebs}}
                    <div class="card d-flex flex-column col-lg-3 col-md-5 col-sm-8 m-2 align-items-center justify-content-end p-3 bg-dark border border-warning">
                        <h3 class="text-center">{{name}}</h3>
                        <img class="fighter mx-1 mb-2" src="https://celebritybucks.com/images/celebs/full/{{fame.id}}.jpg"
                            onerror="this.src='https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png'" />
                        <h5 class="text-center text-warning">Lv: {{level}}</h5>
                        <h5 class="text-center text-danger">Pwr: {{fame.power}}</h5>
                        <h5 class="text-center text-danger">XP: {{XP}}</h5>
                        <button class="select-fighter btn btn-warning" data-id="{{id}}" data-name="{{name}}" data-power="{{fame.power}}" data-fame_id="{{fame_id}}" data-level="{{level}}" data-XP="{{XP}}">Select</button>
                    </div>
                    {{/each}}
                </div>
            </article>
        </section>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="js/showdown.js"></script>