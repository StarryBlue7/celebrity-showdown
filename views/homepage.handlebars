<div class="row d-flex justify-content-center align-items-center w-100 mt-5 mx-0">
    <div class="col-lg-8 col-md-12 col-sm-12">
        <section class="card flex-fill border-warning">
            <summary class="card-header bg-dark">
                <h2 class="text-center">Latest Showdowns</h2>
            </summary>
            {{#each showdowns}}
            <article class="card-body bg-secondary border-bottom border-top border-warning">
                <div class="d-flex flex-row flex-fill justify-content-around align-items-center">
                    <div class="d-flex flex-column align-items-center">
                        <h3 class="fighter-name text-center">{{celebrity.name}}</h3>
                        <img class="fighter mx-1" src="https://celebritybucks.com/images/celebs/full/{{celebrity.fame_id}}.jpg" 
                            onerror="this.src='https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png'"/>
                        {{#if attacker_win}}
                        <h3 class="text-center victory">Victory</h3>
                        {{else}}
                        <h3 class="text-center defeat">Defeat</h3>
                        {{/if}}
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <h4>{{format_date date_created}}</h4>
                        <img class="swords" src="https://img.icons8.com/external-justicon-lineal-justicon/64/fa314a/external-sword-pirates-justicon-lineal-justicon.png"/>
                        <h4>{{format_time date_created}}</h4>                    
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <h3 class="fighter-name text-center">{{defender_name}}</h3>
                        <img class="fighter mx-1" src="https://celebritybucks.com/images/celebs/full/{{defender_id}}.jpg"  
                            onerror="this.src='https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png'"/>
                        {{#if attacker_win}}
                        <h3 class="text-center defeat">Defeat</h3>
                        {{else}}
                        <h3 class="text-center victory">Victory</h3>
                        {{/if}}
                    </div>
                </div>
            </article>
        {{/each}}
        </section>
    </div>
</div>